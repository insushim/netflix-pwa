{
  "name": "Netflix Desktop",
  "short_name": "Netflix",
  "description": "Netflix as Desktop PWA",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "orientation": "landscape",
  "theme_color": "#E50914",
  "background_color": "#000000",
  
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icon-512.png", 
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  
  "categories": ["entertainment", "video"],
  "prefer_related_applications": false,
  
  "display_override": ["window-controls-overlay", "standalone"],
  
  "scope": "/",
  
  "screenshots": [
    {
      "src": "screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}